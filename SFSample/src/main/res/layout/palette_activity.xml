<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/white"
                                    android:orientation="vertical"


    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <ImageView
            android:id="@+id/pic_iv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/round_bit_map_test"
            />

        <TextView
            android:id="@+id/txt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pic_iv"
            android:layout_alignRight="@id/pic_iv"
            android:layout_below="@id/pic_iv"
            android:background="@color/transparent_half"
            android:gravity="center"
            android:padding="12dp"
            android:text="这是一幅风景图片"
            android:textColor="@color/dialog_blue"
            android:textSize="15sp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>