<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="60dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的车牌号:"
        android:gravity="center"
        android:textColor="@color/lb_grey"
        android:padding="8dp"
        android:textSize="22dp"
        />
    <TextView
        android:id="@+id/bike_number_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_black"
        android:background="@drawable/baby_medical_input_et"
        android:padding="8dp"
        android:textSize="32dp"
        />
    </LinearLayout>

    <Button
        android:id="@+id/upload_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/baby_medical_login_bt"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="上传数据"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/bike_pwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_black"
        android:background="@drawable/baby_medical_input_et"
        android:padding="8dp"
        android:textSize="32dp"
        android:layout_above="@id/upload_bt"
        android:hint="请输入ofo密码"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>