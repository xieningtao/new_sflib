<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_bk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:clickable="true">

        <com.basesmartframe.share.XSocialShareView
            android:id="@+id/videoshow_share"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:numColumns="4"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider" />

        <Button
            android:id="@+id/share_cancle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textColor="@color/text_black"
            android:textSize="14sp"
            android:text="@string/cancel"
            />
    </LinearLayout>

</RelativeLayout><!-- From: file:/E:/gitRepository/android/sflib/BaseSmartFrame/res/layout/videoshow_share.xml -->