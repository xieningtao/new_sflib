<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kiwi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
    <com.sflib.CustomView.baseview.RoundRecPagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/white"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        kiwi:cpstsDividerColor="@color/transparent"
        kiwi:cpstsIndicatorColor="@color/text_red"
        kiwi:cpstsIndicatorHeight="2dp"
        kiwi:cpstsShouldExpand="false"
        kiwi:cpstsTabBackground="@color/transparent"
        kiwi:cpstsTabPaddingLeftRight="14dp"
        kiwi:cpstsUnderlineColor="@color/text_black"
        kiwi:cpstsUnderlineHeight="0.5dp"
        kiwi:cpstsIndicatorStrokeWidth="1"
        kiwi:cpstsIndicatorRectCorner="8"
        kiwi:cpstsIndicatorLeftRightPadding="8dp"
        kiwi:cpstsIndicatorTopBottomPadding="4dp"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="8dp"
        android:background="@color/white"
        android:layout_weight="1" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/error_fl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <TextView
        android:id="@+id/new_num_tv"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/text_red"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        />
</RelativeLayout>