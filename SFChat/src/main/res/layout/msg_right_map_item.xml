<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <include
        android:id="@+id/msg_left_photo_common_item"
        layout="@layout/msg_common_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_left_photo_common_item"
        android:gravity="right"
        android:orientation="horizontal"
        >
        <include
            android:id="@+id/msg_right_map_state"
            layout="@layout/msg_state_item"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            >


            <ImageView
                android:id="@+id/map_image"
                android:layout_width="120dp"
                android:layout_height="76dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_map_img"
                />

            <RelativeLayout
                android:id="@+id/address_layout"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignBottom="@+id/map_image"
                android:layout_alignLeft="@id/map_image"
                android:layout_alignRight="@id/map_image"
                android:layout_marginRight="6dp"
                android:background="@drawable/location_bar">

                <TextView
                    android:id="@+id/adress"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/location_bar"
                    android:duplicateParentState="true"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingLeft="6dp"
                    android:paddingRight="4dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="#FFFFFFFF"
                    android:textIsSelectable="true"/>

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/loc_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible"/>
        </RelativeLayout>

        <include
            android:id="@+id/msg_map_user"
            layout="@layout/msg_user_item"
            android:layout_width="38dp"
            android:layout_height="38dp"
            />
    </LinearLayout>
</RelativeLayout>