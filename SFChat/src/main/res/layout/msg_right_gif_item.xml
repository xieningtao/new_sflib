<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <include
        android:id="@+id/msg_right_txt_common_item"
        layout="@layout/msg_common_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_right_txt_common_item"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        >

        <include
            android:id="@+id/msg_right_txt_state"
            layout="@layout/msg_state_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <RelativeLayout
            android:id="@+id/gif_content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:paddingLeft="2dp">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                />

        </RelativeLayout>

        <include
            android:id="@+id/msg_txt_user"
            layout="@layout/msg_user_item"
            android:layout_width="38dp"
            android:layout_height="38dp"
            />
    </LinearLayout>
</RelativeLayout>