<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <include
        android:id="@+id/msg_left_image_common_item"
        layout="@layout/msg_common_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_left_image_common_item"
        android:gravity="left"
        android:orientation="horizontal"
        >

        <include
            android:id="@+id/msg_image_user"
            layout="@layout/msg_user_item"
            android:layout_width="38dp"
            android:layout_height="38dp"
            />

        <FrameLayout
            android:id="@+id/paper_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            >

            <ImageView
                android:id="@+id/gif_tags_image"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:background="@android:color/transparent"
                android:visibility="visible"/>
        </FrameLayout>

        <include
            android:id="@+id/msg_left_image_state"
            layout="@layout/msg_state_item"
            />
    </LinearLayout>
</RelativeLayout>